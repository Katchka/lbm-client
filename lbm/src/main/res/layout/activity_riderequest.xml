<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    android:background="@drawable/main_background"
    tools:context=".ProfileGoogleActivity" >

    <ProgressBar
        android:id="@+id/wait_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="90dp"
        />

    <LinearLayout
        android:id="@+id/map_layout"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/map_to_rider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            class="com.google.android.gms.maps.SupportMapFragment" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:layout_weight="1">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:textSize="20dp"
                android:text="Ride Request"
                android:textColor="@color/white"
                android:background="@color/lazooz_mined_km_dark_blue"/>
            <TextView
                android:id="@+id/ride_request_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20dp"
                android:text="@string/riderequest"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgProfilePic"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    app:border_width="0dp"
                    android:layout_weight="1"
                    app:border_color="#FF000000"/>
                <ProgressBar
                android:id="@+id/ride_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_weight="1"
                android:layout_marginLeft="90dp" />
                <TextView
                    android:id="@+id/match_accepted_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="90dp" />
                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="90dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="5dp"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/want_to_ride_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20dp"

                android:text="@string/want_to_ride"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18dp" />
            <!--
                    <TextView
                        android:id="@+id/txtDestPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="18dp" />
            -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2">
                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="accept"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/wallet_btn"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/btn_reject"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="reject"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/reject_button"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>