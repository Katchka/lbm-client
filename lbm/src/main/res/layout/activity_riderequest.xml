<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lazooz.lbm.IntroActivity"
    tools:ignore="MergeRootFrame" >
    <ProgressBar
        android:id="@+id/wait_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="90dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


            <LinearLayout
                android:id="@+id/map_layout"
                android:orientation="vertical"
                android:weightSum="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    >
                    <fragment
                        android:id="@+id/map_to_rider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        class="com.google.android.gms.maps.SupportMapFragment"
                        tools:layout="@layout/abc_screen_simple" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|center"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"

                                    android:gravity="center"
                                    android:id="@+id/duration"
                                    android:background="@drawable/btn_timing" />




                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"

                    android:background="@color/lazooz_mined_km_dark_blue"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgProfilePic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"

                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"

                        app:border_width="0dp"

                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="5dp"
                        android:textSize="20dp"
                        android:id="@+id/txtName"
                        android:textColor="@color/white"
                        />

                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">
                    <ProgressBar
                        android:id="@+id/ride_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="90dp" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_weight="3">




                        <TextView
                            android:id="@+id/match_accepted_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="90dp" />





                        <TextView
                            android:id="@+id/want_to_ride_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:textSize="20sp"

                            android:text="@string/want_to_ride"/>

                        <TextView
                            android:id="@+id/requestdest"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="18dp" />
                        <!--
                                <TextView
                                    android:id="@+id/txtDestPlace"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:textSize="18dp" />
                        -->

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:layout_marginBottom="25dp"
                            android:layout_weight="1"
                            >
                            <Button
                                android:id="@+id/btn_accept"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/accept"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                android:background="@drawable/wallet_btn"
                                android:textColor="@color/white" />
                            <Button
                                android:id="@+id/btn_reject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/reject"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                android:background="@drawable/reject_button"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

    </LinearLayout>
</FrameLayout>